<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">

      <%- include('./partials/navbar') %>
      <%- include('./partials/sidebar') %>
    
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
              </div><!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item active">Home</li>
                </ol>
              </div><!-- /.col -->
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
    
        <!-- Main content -->
        <div class="content">
          
          <div class="card card-solid">
            <div class="card-body pb-0">
              <div class="row">

                <div class="col-lg-3 col-6">
                  <!-- small card -->
                  <div class="small-box bg-info">
                    <div class="inner">
                      <h3>Create</h3>
                      <p>Product</p>
                    </div>
                    <div class="icon">
                      <i class="fas fa-box"></i>
                    </div>
                    <a href="/admin/create-product" class="small-box-footer">
                      Add <i class="fas fa-arrow-circle-right"></i>
                    </a>
                  </div>
                </div>

                <div class="col-lg-3 col-6">
                  <!-- small card -->
                  <div class="small-box bg-info">
                    <div class="inner">
                      <h3>List</h3>
                      <p>Product</p>
                    </div>
                    <div class="icon">
                      <i class="fas fa-box"></i>
                    </div>
                    <a href="/admin/list" class="small-box-footer">
                      View <i class="fas fa-arrow-circle-right"></i>
                    </a>
                  </div>
                </div>

                <div class="col-lg-3 col-6">
                  <!-- small card -->
                  <div class="small-box bg-success">
                    <div class="inner">
                      <h3>Create</h3>
                      <p>Category</p>
                    </div>
                    <div class="icon">
                      <i class="fas fa-th"></i>
                    </div>
                    <a href="/admin/category" class="small-box-footer">
                      Add <i class="fas fa-arrow-circle-right"></i>
                    </a>
                  </div>
                </div>

                <div class="col-lg-3 col-6">
                  <!-- small card -->
                  <div class="small-box bg-success">
                    <div class="inner">
                      <h3>List</h3>
                      <p>Category</p>
                    </div>
                    <div class="icon">
                      <i class="fas fa-th"></i>
                    </div>
                    <a href="/admin/category" class="small-box-footer">
                      View <i class="fas fa-arrow-circle-right"></i>
                    </a>
                  </div>
                </div>

              </div>
            </div>
          </div>

        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
    
      <%- include('./partials/footer') %>
  </body>
</html>
